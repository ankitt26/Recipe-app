<h1>Inventories</h1>

<% if @inventories.any? %>
<ul class="inventory-list">
<% @inventory_foods.inspect%>
    <% @inventories.each do |inventory| %>
        <li>
            <div class="left">
                <h2><%= link_to inventory.name, inventory, class: "inventory-link" %></h2><br>
                <%= link_to "Remove", inventory_path(inventory.id), class: "btn btn-outline-danger", method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this inventory?" } %>
            </div>
            <div class="right">
              <p class="inventory_desc"><%= inventory.description %></p>
            </div>
         </li>
    <% end %>
    <div class="btn-container"><%= link_to "Create a new inventory", new_inventory_path, class: "btn-create btn-inventory" %></div>
</ul>


<% else %>
  <p class="new-inventory">You don't have any inventorys yet. <%= link_to "Create a new inventory", new_inventory_path, class: "btn-create" %></p>
<% end %>
